<BlockWrapper :attrs="attributes" :block="block">
    {% set innerBlocks %}
        <InnerBlocks :template="template | raw" />
    {% endset %}

    <Carousel @unless="is_preview" :name="fields.name">
        {{ innerBlocks }}
    </Carousel>

    {% if is_preview %}
        {{ innerBlocks }}
    {% endif %}
</BlockWrapper>

<Style>
    /**
     * Block Alignment Fix
     *
     * For some reason WordPress doesn't want to let the carousel block be full width,
     * so we're forcing the issue ðŸ¥´
     *
     * This was Haley's idea
     */
    .wp-block-acf-carousel {
        max-width: unset !important;
    }
</Style>